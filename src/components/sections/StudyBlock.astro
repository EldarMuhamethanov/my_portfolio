---

const {
    start,
    end,
    link,
    name,
    description,
} = Astro.props

---

<div class="group relative rounded-lg p-4 transition-all">
    <div class="flex flex-col gap-4 sm:flex-row">
      <div class="flex shrink-0 flex-row sm:flex-col items-center justify-between min-w-[110px] gap-4">
        <span class="text-sm shrink-0">{start}</span>
        <div class="h-0.5 sm:h-full w-full sm:w-0.5 rounded-full bg-zinc-200 dark:bg-zinc-700"></div>
        <span class="text-sm shrink-0">{end}</span>
      </div>
      <div class="flex flex-col gap-2">
        <a
          href={link}
          class="group/link text-base font-medium"
        >
          {name}
          <span class="ml-1 inline-block transition-transform group-hover/link:translate-x-1">â†’</span>
        </a>
        <span class="text-sm text-foreground/60">
          {description}
        </span>
      </div>
    </div>
  </div>