---
import { WORK } from '../lib/constants'
import BaseLayout from '../layouts/BaseLayout.astro'
import TopLayout from '../layouts/TopLayout.astro'
import BottomLayout from '../layouts/BottomLayout.astro'
import { Badge } from '../components/ui/badge'

import { EXPERIENCE } from '../lib/constants'
---

<BaseLayout title={WORK.TITLE} description={WORK.DESCRIPTION}>
  <main class="flex min-h-[80vh] flex-auto flex-col" transition:animate="fade">
    <TopLayout>
      <h2
        class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0"
      >
        {WORK.TITLE}
      </h2>
    </TopLayout>
    <BottomLayout>
      <ul>
        {
          EXPERIENCE.map((entry) => (
            <li class="animate mt-4 border-b border-black/10 py-8 first-of-type:mt-0 first-of-type:pt-0 last-of-type:border-none dark:border-white/25">
              <div class="mb-4 text-sm uppercase">
                {entry.start} - {entry.end}
              </div>
              <a
                href={entry.link ?? ''}
                class={`font-semibold ${entry?.link ? 'text-primary' : 'text-foreground'} text-xl`}
              >
                {entry.company}
              </a>
              <div class="mb-2 text-base font-semibold">{entry.position}</div>
              <article class="prose dark:prose-invert">
                {!!entry.tasks.length && (
                  <h4 class="mb-2 text-sm font-bold">Обязанности</h4>
                )}
                <ul class="mb-4 list-inside list-disc">
                  {entry.tasks.map((task) => (
                    <li class="text-sm">{task}</li>
                  ))}
                </ul>
                {!!entry.achievements.length && (
                  <h4 class="mb-2 text-sm font-bold">Достижения</h4>
                )}
                <ul class="mb-4 list-inside  list-disc">
                  {entry.achievements.map((task) => (
                    <li class="text-sm">{task}</li>
                  ))}
                </ul>
                {!!entry.stack.length && (
                  <h4 class="mb-2 text-sm font-bold">Стек технологий</h4>
                )}
                <div class="flex flex-wrap gap-2">
                  {entry.stack.map((item) => (
                    <Badge variant="outline">{item}</Badge>
                  ))}
                </div>
              </article>
            </li>
          ))
        }
      </ul>
    </BottomLayout>
  </main>
</BaseLayout>
